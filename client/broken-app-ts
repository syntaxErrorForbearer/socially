/* No need to include this file anywhere becuase of meteors power and simplicity!!!*/

import 'reflect-metadata';
import 'zone.js/dist/zone';
/* These are dependencies we need; they are not folders but a reference to CommonJS modules aliased as @angular/core and @angular/platform-browser-dynamic, which in fact are located under your node_modules directory*/
import { Component } from '@angular/core';
import { bootstrap } from '@angular/platform-browser-dynamic';

@Component({
	selector: 'app',
	templateURL: 'client/app.html'
})

/* The class, Socially, inherits from @Component which is part of angular 2*/
class Socially { }

/* bootstraping the component marks it as the root component*/
bootstrap(Socially);
